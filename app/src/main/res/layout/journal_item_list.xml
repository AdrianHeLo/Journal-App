<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="journal"
            type="com.adrianhelo.journalapp.data.JournalModel"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:alpha="0.8">

            <TextView
                android:id="@+id/journal_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="@{journal.username}"
                android:textColor="@color/black"
                android:hint="Username"
                android:textColorHint="@color/black"
                android:gravity="start"
                android:layout_gravity="center"
                android:padding="3dp"/>

            <ImageButton
                android:id="@+id/journal_row_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_share"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:background="@{journal.imageUrl}"
                android:id="@+id/journal_image_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/journal_title_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{journal.title}"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:hint="Title"
                android:textColorHint="@color/black"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/journal_thought_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{journal.thoughts}"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:hint="Description"
                android:textColorHint="@color/black"
                android:padding="10dp"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"/>

            <TextView
                android:id="@+id/journal_timestamp_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{journal.timeAdded.toString()}"
                android:textColor="@color/black"
                android:hint="Date created"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                android:padding="5dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>