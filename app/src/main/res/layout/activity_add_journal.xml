<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flash_white"
    tools:context=".presentation.ui.AddJournalActivity"
    android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/image_activity_add_journal"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_border_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/post_username_activity_add_journal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="Post Title"
            android:textColor="@color/sea_blue"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/image_activity_add_journal"
            app:layout_constraintBottom_toTopOf="@+id/post_date_activity_add_journal"
            tools:layout_editor_absoluteY="161dp"/>

        <TextView
            android:id="@+id/post_date_activity_add_journal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="Post Date"
            android:textColor="@color/sea_blue"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/image_activity_add_journal"
            app:layout_constraintStart_toStartOf="@+id/image_activity_add_journal"
            app:layout_constraintVertical_bias="1.0"/>

        <ImageView
            android:id="@+id/post_camera_activity_add_journal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_photo_camera"
            app:layout_constraintBottom_toBottomOf="@+id/image_activity_add_journal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_activity_add_journal"/>

        <EditText
            android:id="@+id/post_username_input_activity_add_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="Post Title"
            android:textColorHint="@color/sea_blue"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_border_box"
            android:maxLines="1"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_activity_add_journal"/>

        <EditText
            android:id="@+id/post_thoughts_input_activity_add_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="Post Thoughts"
            android:textColorHint="@color/sea_blue"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_border_box"
            android:maxLines="1"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_username_input_activity_add_journal"/>

        <ProgressBar
            android:id="@+id/progress_circular_activity_add_journal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/post_thoughts_input_activity_add_journal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/save_button_activity_add_journal"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="@color/blizzard_blue"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>